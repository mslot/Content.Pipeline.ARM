{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "farmResourceId": {
      "type": "string"
    },
    "storageConnectionString": {
      "type": "string"
    },
    "databaseConnectionstring": {
      "type": "string"
    },
    "azfunName": {
      "type": "string"
    },
    "appsettings": {
      "type": "array"
    }
  },
  "variables": {
    "builtinAppsettings": [
      {
        "name": "AzureWebJobsStorage",
        "value": "[parameters('storageConnectionString')]"
      },
      {
        "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
        "value": "[parameters('storageConnectionString')]"
      },
      {
        "name": "WEBSITE_CONTENTSHARE",
        "value": "[toLower(parameters('azfunName'))]"
      },
      {
        "name": "FUNCTIONS_EXTENSION_VERSION",
        "value": "~2"
      },
      {
        "name": "WEBSITE_NODE_DEFAULT_VERSION",
        "value": "~10"
      },
      {
        "name": "FUNCTIONS_WORKER_RUNTIME",
        "value": "dotnet"
      }
    ],
    "finalAppsettings": "[union(variables('builtinAppsettings'),parameters('appsettings'))]",
    "connectionstrings": [
      {
        "name": "conn",
        "connectionString": "[parameters('databaseConnectionstring')]",
        "type": "SQLAzure"
      }
    ]

  },
  "resources": [
    {
      "name": "[parameters('azfunName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-02-01",
      "kind": "functionapp",
      "properties": {
        "serverFarmId": "[parameters('farmResourceId')]",
        "siteConfig": {
          "appSettings": "[variables('finalAppsettings')]",
          "connectionStrings": "[variables('connectionstrings')]"
        }
      }
    }
  ],
  "outputs": {
  }
}
