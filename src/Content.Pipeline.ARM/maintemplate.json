{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sqlServerUsername": {
      "type": "string"
    },
    "sqlServerPassword": {
      "type": "securestring"
    },
    "sqlServerDatabaseName": {
      "type": "string",
      "minLength": 1
    },
    "sqlServerName": {
      "type": "string"
    },
    "env": {
      "type": "string"
    },
    "storageSasToken": {
      "type": "string"
    },
    "storageUri": {
      "type": "string"
    },
    "appName": {
      "type": "string"
    },
    "ownerMail": {
      "type": "string"
    },
    "ownerName": {
      "type": "string"
    }
  },
  "variables": {
    "azuretemplatestoragename": "[concat('azuretemplatestorage',parameters('env'))]",
    "azuretemplatestorageurl": "[parameters('storageUri')]",
    "sqlServerDatabaseName": "[concat(parameters('sqlServerDatabaseName'),'-',parameters('env'))]",
    "sqlServerName": "[concat(parameters('sqlServerName'),'-',parameters('env'))]",
    "webappName": "webapp-testapi-dev",
    "serverfarmName": "farm-dev",
    "apim": {
      "name": "[concat('apim-',parameters('appName'),'-internal',parameters('env'))]",
      "vnetName": "[variables('vnetBackend').name]",
      "subnetName": "[variables('vnetBackend').apim.name]",
      "sku": "Developer",
      "skuCount": "1",
      "publisherEmail": "[parameters('ownerMail')]",
      "publisherName": "[parameters('ownerName')]",
      "mode": "Internal"
    },
    "vnetBackend": {
      "name": "[concat('vnet-',parameters('appName'),'-internal',parameters('env'))]",
      "addressPrefix": "10.0.0.0/16",
      "backend": {
        "subnetPrefix": "10.0.0.0/24",
        "name": "backend"
      },
      "apim": {
        "subnetPrefix": "10.0.1.0/24",
        "name": "apim"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-05-01",
      "dependsOn": [ "vnetDeploy" ],
      "name": "apimDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','apim.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": { "value": "[variables('apim').name]" },
          "vnetName": { "value": "[variables('apim').vnetName]" },
          "subnetName": { "value": "[variables('apim').subnetName]" },
          "sku": { "value": "[variables('apim').sku]" },
          "skuCount": { "value": "[variables('apim').skuCount]" },
          "publisherEmail": { "value": "[variables('apim').publisherEmail]" },
          "publisherName": { "value": "[variables('apim').publisherName]" },
          "mode": { "value": "[variables('apim').mode]" }
        }
      },
      "type": "Microsoft.Resources/deployments"
    },
    {
      "apiVersion": "2018-05-01",
      "name": "vnetDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','vnet.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": { "value": "[variables('vnetBackend').name]" },
          "addressPrefixs": { "value": [ "[variables('vnetBackend').addressPrefix]" ] },
          "subnets": {
            "value": [
              {
                "name": "[variables('vnetBackend').backend.name]",
                "properties": {
                  "addressPrefix": "[variables('vnetBackend').backend.subnetPrefix]",
                  "serviceEndpoints": [
                    {
                      "service": "Microsoft.Web"
                    }
                  ],
                  "delegations": [
                    {
                      "name": "delegation",
                      "properties": {
                        "serviceName": "Microsoft.Web/serverFarms"
                      }
                    }
                  ]
                }
              },
              {
                "name": "[variables('vnetBackend').apim.name]",
                "properties": {
                  "addressPrefix": "[variables('vnetBackend').apim.subnetPrefix]",
                  "delegations": [
                    {
                      "name": "delegation",
                      "properties": {
                        "serviceName": "Microsoft.ApiManagement/service"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      },
      "type": "Microsoft.Resources/deployments"
    },
    {
      "apiVersion": "2018-05-01",
      "dependsOn": [ "databaseDeploy", "serverfarmDeploy", "vnetDeploy" ],
      "name": "websiteDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','website.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "webappName": { "value": "[variables('webappName')]" },
          "farmResourceId": { "value": "[reference('serverfarmDeploy').outputs.resourceId.value]" },
          "connectionstring": { "value": "[reference('databaseDeploy').outputs.connectionstring.value]" },
          "vnetName": { "value": "[variables('vnetBackend').name]" },
          "subnetName": { "value": "[variables('vnetBackend').backend.name]" },
          "appsettings": {
            "value": [
            ]
          }
        }
      },
      "type": "Microsoft.Resources/deployments"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "databaseDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','database.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "username": { "value": "[parameters('sqlServerUsername')]" },
          "password": { "value": "[parameters('sqlServerPassword')]" },
          "databaseName": { "value": "[variables('sqlServerDatabaseName')]" },
          "serverName": { "value": "[variables('sqlServerName')]" }

        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "serverfarmDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','serverfarm.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "farmName": { "value": "[variables('serverfarmName')]" },
          "farmSkuName": { "value": "S1" }
        }
      }
    }
  ],
  "outputs": {
  }
}
