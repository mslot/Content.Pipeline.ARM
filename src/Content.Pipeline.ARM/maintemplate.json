{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sqlServerUsername": {
      "type": "string"
    },
    "sqlServerPassword": {
      "type": "securestring"
    },
    "sqlServerDatabaseName": {
      "type": "string",
      "minLength": 1
    },
    "sqlServerName": {
      "type": "string"
    },
    "env": {
      "type": "string"
    },
    "storageSasToken": {
      "type": "string"
    },
    "storageUri": {
      "type": "string"
    },
    "appName": {
      "type": "string"
    }
  },
  "variables": {
    "azuretemplatestoragename": "[concat('azuretemplatestorage',parameters('env'))]",
    "azuretemplatestorageurl": "[parameters('storageUri')]",
    "sqlServerDatabaseName": "[concat(parameters('sqlServerDatabaseName'),'-',parameters('env'))]",
    "sqlServerName": "[concat(parameters('sqlServerName'),'-',parameters('env'))]",
    "webappName": "webapp-testapi-dev",
    "serverfarmName": "farm-dev"
  },
  "resources": [
    {
      "apiVersion": "2018-05-01",
      "dependsOn": [ "databaseDeploy", "serverfarmDeploy" ],
      "name": "websiteDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','website.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "webappName": { "value": "[variables('webappName')]" },
          "farmResourceId": { "value": "[reference('serverfarmDeploy').outputs.resourceId.value]" },
          "connectionstring": { "value": "[reference('databaseDeploy').outputs.connectionstring.value]" },
          "appsettings": {
            "value": [
            ]
          }
        }
      },
      "type": "Microsoft.Resources/deployments"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "databaseDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','database.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "username": { "value": "[parameters('sqlServerUsername')]" },
          "password": { "value": "[parameters('sqlServerPassword')]" },
          "databaseName": { "value": "[variables('sqlServerDatabaseName')]" },
          "serverName": { "value": "[variables('sqlServerName')]" }

        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "serverfarmDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('Modules/','serverfarm.json',parameters('storageSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "farmName": { "value": "[variables('serverfarmName')]" }
        }
      }
    }
  ],
  "outputs": {
  }
}
