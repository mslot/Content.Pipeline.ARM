{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "env": {
      "type": "string"
    },
    "azuretemplateType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    }
  },
  "variables": {
    "azuretemplateStorageName": "[concat('azuretemplatestorage', parameters('env'))]",
    "azuretemplateStorageResourceId": "[resourceId('Microsoft.Storage/storageAccounts',variables('azuretemplateStorageName'))]"
  },
  "resources": [
    {
      "name": "[variables('azuretemplateStorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('azuretemplateType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "azuretemplate"
      },
      "kind": "Storage"
    }
  ],
  "outputs": {
    "storageUrl": {
      "type": "string",
      "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('azuretemplateStorageName'), ';AccountKey=', listKeys(variables('azuretemplateStorageResourceId'),'2015-05-01-preview').key1)]"
    }
  }
}
